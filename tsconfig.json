{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    // "module": "nodenext",
    // "target": "esnext",
    // "esModuleInterop": true,
    // "strict": true,

    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2023",
    "strict": true,
    "esModuleInterop": true,
    "ignoreDeprecations": "5.0",
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
